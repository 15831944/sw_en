<Window x:Class="PFD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFD"
        mc:Ignorable="d"        
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="MainWindow" Height="1250" Width="2500">
    <Grid>
        <!--Base Grid 2 columns and 4 rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="ParamsGrid" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Name ="Combobox_Models" HorizontalAlignment="Left" 
                          VerticalAlignment="Center" SelectionChanged="ComboBox_Models_SelectionChanged" SelectedIndex="1"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Gable With:" HorizontalAlignment="Left" Margin="5,0" 
                           VerticalAlignment="Top" />
                <TextBox Grid.Row="1" Grid.Column="1" Name ="TextBox_Gable_Width" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Gable_Width_TextChanged"  
                         Text="{Binding Path=CableWidth, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left"  
                          TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Length:" HorizontalAlignment="Left" Margin="5,0"
                         VerticalAlignment="Top" />
                <TextBox Grid.Row="2" Grid.Column="1" Name ="TextBox_Length" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Length_TextChanged" 
                         Text="{Binding Path=Length, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" 
                         TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Wall Height:" HorizontalAlignment="Left" Margin="5,0"
                           TextWrapping="Wrap" VerticalAlignment="Top"  />
                <TextBox Grid.Row="3" Grid.Column="1" Name ="TextBox_Wall_Height" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top"  TextChanged="TextBox_Wall_Height_TextChanged"
                         Text="{Binding Path=WallHeight, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" 
                           TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Roof Pitch:" HorizontalAlignment="Left" Margin="5,0"
                           TextWrapping="Wrap" VerticalAlignment="Top" />
                <TextBox Grid.Row="4" Grid.Column="1" Name ="TextBox_Roof_Pitch" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Roof_Pitch_TextChanged"
                         Text="{Binding Path=RoofPitch, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" 
                           TextWrapping="Wrap" Text="[°]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Frames:" HorizontalAlignment="Left" Margin="5,0"
                           TextWrapping="Wrap" VerticalAlignment="Top"  />
                <TextBox Grid.Row="5" Grid.Column="1" Name ="TextBox_Frames_No" HorizontalAlignment="Left"  Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Frames_No_TextChanged"
                         Text="{Binding Path=Frames, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left"  
                           TextWrapping="Wrap" Text="[-]" VerticalAlignment="Top"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Girt Distance:" HorizontalAlignment="Left" Margin="5,0"
                         TextWrapping="Wrap" VerticalAlignment="Top" />
                <TextBox Grid.Row="6" Grid.Column="1" Name ="TextBox_Girt_Distance" Width="100"
                         HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" 
                         TextChanged="TextBox_Girt_Distance_TextChanged"
                         Text="{Binding Path=GirtDistance, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" 
                         TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Purlin Distance:" HorizontalAlignment="Left" Margin="5,0"
                         TextWrapping="Wrap" VerticalAlignment="Top" />
                <TextBox Grid.Row="7" Grid.Column="1" Name ="TextBox_Purlin_Distance" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Purlin_Distance_TextChanged"
                         Text="{Binding Path=PurlinDistance, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" 
                         TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Column Distance:" HorizontalAlignment="Left" Margin="5,0"
                         TextWrapping="Wrap" VerticalAlignment="Top" />
                <TextBox Grid.Row="8" Grid.Column="1" Name ="TextBox_Column_Distance" HorizontalAlignment="Left" Width="100"
                         TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_Column_Distance_TextChanged"
                         Text="{Binding Path=ColumDistance, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                <TextBlock Grid.Row="8" Grid.Column="2" HorizontalAlignment="Left" 
                         TextWrapping="Wrap" Text="[mm]" VerticalAlignment="Top" />

                <TextBlock Grid.Row="0" Grid.Column="4" Text="Location:" HorizontalAlignment="Left" 
                           VerticalAlignment="Top" />
                <ComboBox Grid.Row="0" Grid.Column="5" Name ="Combobox_Location" HorizontalAlignment="Left" 
                          VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_Location_SelectionChanged" SelectedIndex="11"/>
                
            </Grid>
        </ScrollViewer>

        <DataGrid Grid.Row="1" Grid.Column="0" Name ="Components" AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Status}" Header="Component" Width="200"/>
                <DataGridTemplateColumn Header="Cross-Section" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox Height="22" SelectedItem="={Binding Status}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Material" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox Height="22" SelectedItem="={Binding Status}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="2" Grid.Column="0" Name ="Results_GridView" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                  SelectionChanged="Results_GridView_SelectionChanged" IsReadOnly="True">
        </DataGrid>
        <Button Grid.Row="3" Grid.Column="0" Content="Calculate" HorizontalAlignment="Right" 
                VerticalAlignment="Center" Width="75" Margin="0 0 20 0" Click="Calculate_Click"/>
        <Button Name="Clear3DModel" Grid.Row="3" Grid.Column="0" Content="Clear" HorizontalAlignment="Left" 
                VerticalAlignment="Center" Width="75" Margin="20 0 20 0" Click="Clear3DModel_Click" />

        <Frame Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" Name ="Frame1" Content="Portal Frame 3D Preview" 
               HorizontalContentAlignment="Stretch" 
               VerticalContentAlignment="Stretch" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
        <Button Grid.Row="3" Grid.Column="0" Name="SystemComponentViewer" Content="Component Viewer" HorizontalAlignment="Right" 
            VerticalAlignment="Center" Width="124" Margin="0,26,100,25" Click="SystemComponentViewer_Click"/>
    </Grid>
</Window>
