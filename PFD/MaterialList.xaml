<Window x:Class="PFD.MaterialList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFD"
        mc:Ignorable="d"
        Title="MaterialList" Height="1000" Width="800">
    <Grid Margin="0,0,0,0">
        <DataGrid Name ="Datagrid_Members" AutoGenerateColumns="False"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,25,10,650"
            IsReadOnly="True">
        </DataGrid>

        <DataGrid Name ="Datagrid_Plates" AutoGenerateColumns="False"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,330,10,360"
            IsReadOnly="True">
        </DataGrid>

        <DataGrid Name ="Datagrid_Screws" AutoGenerateColumns="False"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,620,10,40"
            IsReadOnly="True">
        </DataGrid>

    </Grid>
</Window>
